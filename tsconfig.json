{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "outDir": "dist",
        "declaration": true
    },
    "include": ["src"]
}
